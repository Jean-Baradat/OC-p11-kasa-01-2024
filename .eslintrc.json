{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["react-app"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"max-len": [
			"error",
			{
				"code": 100,
				"ignoreUrls": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true
			}
		],
		"indent": ["error", "tab"],
		"semi": ["error", "never"],
		"linebreak-style": ["error", "unix"],
		"react/function-component-definition": [
			2,
			{
				"namedComponents": "arrow-function"
			}
		]
	}
}
